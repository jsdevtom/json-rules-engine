{
  "name": "truegin",
  "version": "4.0.2",
  "description": "",
  "keywords": [],
  "main": "dist/truegin.umd.js",
  "module": "dist/truegin.es5.js",
  "typings": "dist/types/truegin.d.ts",
  "files": [
    "dist"
  ],
  "author": "Tom <contact@jsdevtom.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsdevtom/truegin"
  },
  "license": "ISC",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "prebuild": "rimraf dist",
    "build": "tsc && tsc -m es6 --outDir ./dist/lib-esm && webpack && typedoc --out typedoc --target es6 --theme default --mode file src",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --config=jest.config.js",
    "test:ci": "npm run lint && npm run test -- --coverage --no-cache --maxWorkers=4",
    "test:watch": "jest --config=jest.config.js --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "npm run lint:fix",
    "travis-deploy-once": "travis-deploy-once"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "devDependencies": {
    "@types/clone": "^0.1.30",
    "@types/debug": "0.0.30",
    "@types/jest": "^22.0.0",
    "@types/lodash.isobjectlike": "^4.0.3",
    "@types/node": "^9.3.0",
    "@types/object-hash": "^1.2.0",
    "awesome-typescript-loader": "^5.0.0",
    "colors": "^1.1.2",
    "commitizen": "^2.10.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.0",
    "jest": "^22.0.2",
    "lint-staged": "^7.2.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.4.4",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.1",
    "semantic-release": "^15.4.0",
    "travis-deploy-once": "^5.0.0",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-eslint-rules": "^5.1.0",
    "typedoc": "^0.11.0",
    "typescript": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "validate-commit-msg": "^2.12.2",
    "webpack": "^4.16.2",
    "webpack-cli": "^2.1.3"
  },
  "dependencies": {
    "clone": "^2.1.1",
    "debug": "^3.1.0",
    "idx": "^2.3.0",
    "lodash.isobjectlike": "^4.0.0",
    "object-hash": "^1.3.0",
    "selectn": "^1.1.2"
  }
}
